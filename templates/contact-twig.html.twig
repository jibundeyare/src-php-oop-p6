<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <title>Hello, world!</title>
  </head>
  <body>

    <div class="container">
        <div class="row">
            <div class="col-sm">
                <h1>Hello, world!</h1>

                <form method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        <input name="email" type="email" class="form-control {% if errors.email is defined %}is-invalid{% endif %}" id="exampleInputEmail1" aria-describedby="emailHelp" value="{{ formData.email }}">
                        {% if errors.email is defined %}
                        <div class="invalid-feedback">
                            {{ messages.email }}
                        </div>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <label for="exampleInputSubject1">Sujet</label>
                        <input name="subject" type="text" class="form-control {% if errors.subject is defined %}is-invalid{% endif %}" id="exampleInputPassword1" value="{{ formData.subject }}">
                        {% if errors.subject is defined %}
                        <div class="invalid-feedback">
                            {{ messages.subject }}
                        </div>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Message</label>
                        <textarea name="message" class="form-control {% if errors.message is defined %}is-invalid{% endif %}" id="exampleFormControlTextarea1" rows="3">{{ formData.message }}</textarea>
                        {% if errors.message is defined %}
                        <div class="invalid-feedback">
                            {{ messages.message }}
                        </div>
                        {% endif %}
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>

            </div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>